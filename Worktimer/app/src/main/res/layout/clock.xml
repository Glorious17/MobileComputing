<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border">

    <RelativeLayout
        android:id="@+id/workRLHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/workRLSeperator">

        <TextView
            android:id="@+id/workTextHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="STUNDEN" />

        <TextView
            android:id="@+id/workHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="80dp"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/workTextHours"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/workRLSeperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/workSeperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=":"
            android:textSize="80dp"
            android:textColor="@color/colorBlack"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/workRLMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/workRLSeperator">

        <TextView
            android:id="@+id/workTextMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="MINUTEN" />

        <TextView
            android:id="@+id/workMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="80dp"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/workTextMinutes"/>
        />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/workRLSeperator">

        <TextView
            android:id="@+id/workDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD:MM:YYYY"/>

    </RelativeLayout>

</RelativeLayout>

